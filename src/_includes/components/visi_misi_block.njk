            <h3 style="color: var(--accent); text-align: center; margin-bottom: 1rem;">Visi</h3>
            <p style="text-align: center; font-size: 1.1rem; font-style: italic;">{{ school.visi }}</p>
        </div>
        
        <!-- Misi -->
